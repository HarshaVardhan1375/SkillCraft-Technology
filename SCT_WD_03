<h1>‚ú®Tic-Tac-Toe ‚ú®</h1>
<div class="board" id="board"></div>
<div class="winner" id="winner"></div>
<button onclick="resetGame()">Restart Game</button>

<script>
let board = ["", "", "", "", "", "", "", "", ""];
let currentPlayer = "X";
let gameOver = false;
let winningPattern = [];

function renderBoard() {
    let boardDiv = document.getElementById("board");
    boardDiv.innerHTML = "";
    board.forEach((cell, i) => {
        let cellDiv = document.createElement("div");
        cellDiv.classList.add("cell");
        if (cell === "X") cellDiv.classList.add("x-mark");
        if (cell === "O") cellDiv.classList.add("o-mark");
        if (winningPattern.includes(i)) cellDiv.classList.add("win-cell");
        cellDiv.textContent = cell;
        cellDiv.onclick = () => makeMove(i);
        boardDiv.appendChild(cellDiv);
    });
}

function makeMove(index) {
    if (board[index] === "" && !gameOver) {
        board[index] = currentPlayer;
        checkWinner();
        currentPlayer = currentPlayer === "X" ? "O" : "X";
        renderBoard();
    }
}

function checkWinner() {
    const winPatterns = [
        [0,1,2], [3,4,5], [6,7,8],
        [0,3,6], [1,4,7], [2,5,8],
        [0,4,8], [2,4,6]
    ];
    for (let pattern of winPatterns) {
        let [a, b, c] = pattern;
        if (board[a] && board[a] === board[b] && board[a] === board[c]) {
            winningPattern = pattern;
            document.getElementById("winner").textContent = `üéâ ${board[a]} Wins! üéâ`;
            gameOver = true;
            return;
        }
    }
    if (!board.includes("")) {
        document.getElementById("winner").textContent = "ü§ù It's a Draw!";
        gameOver = true;
    }
}

function resetGame() {
    board = ["", "", "", "", "", "", "", "", ""];
    currentPlayer = "X";
    gameOver = false;
    winningPattern = [];
    document.getElementById("winner").textContent = "";
    renderBoard();
}

renderBoard();
</script>

</body>
