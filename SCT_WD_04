<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>To-Do Web App</title>
<style>
    body {
        font-family: Arial, sans-serif;
        background: #121212;
        color: white;
        text-align: center;
        padding: 20px;
    }
    h1 { color: #00e6e6; }
    #taskInput {
        padding: 10px;
        width: 60%;
        border: none;
        border-radius: 5px;
    }
    button {
        padding: 10px 15px;
        margin: 5px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
    }
    .addBtn { background: #00e6e6; color: black; }
    .editBtn { background: orange; color: black; }
    .deleteBtn { background: red; color: white; }
    .done { background: green; color: white; }
    .clearBtn { background: #555; color: white; }
    ul {
        list-style: none;
        padding: 0;
        margin-top: 20px;
    }
    li {
        background: #1e1e1e;
        margin: 5px auto;
        padding: 10px;
        width: 70%;
        border-radius: 5px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .completed { text-decoration: line-through; color: gray; }
</style>
</head>
<body>

<h1>To-Do Web App</h1>
<input type="text" id="taskInput" placeholder="Enter your task">
<button class="addBtn" onclick="addTask()">Add Task</button>
<button class="clearBtn" onclick="clearCompleted()">Clear Completed</button>

<ul id="taskList"></ul>

<script>
let tasks = JSON.parse(localStorage.getItem("tasks")) || [];

function saveTasks() {
    localStorage.setItem("tasks", JSON.stringify(tasks));
}

function renderTasks() {
    let list = document.getElementById("taskList");
    list.innerHTML = "";
    tasks.forEach((task, index) => {
        let li = document.createElement("li");
        li.innerHTML = `
            <span class="${task.completed ? 'completed' : ''}">${task.text}</span>
            <div>
                <button class="done" onclick="markDone(${index})">Done</button>
                <button class="editBtn" onclick="editTask(${index})">Edit</button>
                <button class="deleteBtn" onclick="deleteTask(${index})">Delete</button>
            </div>
        `;
        list.appendChild(li);
    });
}

function addTask() {
    let input = document.getElementById("taskInput");
    let task = input.value.trim();
    if (!task) return alert("Please enter a task!");

    tasks.push({ text: task, completed: false });
    saveTasks();
    renderTasks();
    input.value = "";
}

function markDone(index) {
    tasks[index].completed = !tasks[index].completed;
    saveTasks();
    renderTasks();
}

function editTask(index) {
    let newTask = prompt("Edit your task:", tasks[index].text);
    if (newTask && newTask.trim() !== "") {
        tasks[index].text = newTask.trim();
        saveTasks();
        renderTasks();
    }
}

function deleteTask(index) {
    if (confirm("Are you sure you want to delete this task?")) {
        tasks.splice(index, 1);
        saveTasks();
        renderTasks();
    }
}

function clearCompleted() {
    tasks = tasks.filter(task => !task.completed);
    saveTasks();
    renderTasks();
}

// Add Enter key support
document.getElementById("taskInput").addEventListener("keypress", function(e) {
    if (e.key === "Enter") {
        addTask();
    }
});

renderTasks();
</script>

</body>
</html>
